# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_NAME=ipc_justice_aid
DATABASE_USER=ipc_user
DATABASE_PASSWORD=ipc_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Analysis Service Configuration
# Options: 'auto', 'ollama', 'huggingface'
# 'auto' will choose based on environment (dev=ollama, prod=huggingface)
ANALYSIS_ENVIRONMENT=auto

# Ollama Configuration (for local development)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_NAME=Anupam/IPC-Helper:latest
OLLAMA_TIMEOUT=60
OLLAMA_MAX_RETRIES=3

# Hugging Face Configuration (for production deployment)
# Get free token from https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=your-huggingface-api-token-here
HUGGINGFACE_MODEL_ID=mistralai/Mistral-7B-Instruct-v0.1
HUGGINGFACE_TIMEOUT=60
HUGGINGFACE_MAX_RETRIES=3

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@ipc-justice-aid.com
ADMIN_EMAIL=admin@ipc-justice-aid.com

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

# Payment Gateways
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# Legal Analysis Settings
MAX_CASE_DESCRIPTION_LENGTH=5000
ANALYSIS_HISTORY_RETENTION_DAYS=365
ALLOW_ANONYMOUS_ANALYSIS=True
ENABLE_CASE_SHARING=True

# Lead Management Settings
DEFAULT_LEAD_EXPIRY_DAYS=30
MAX_LEADS_PER_LAWYER_PER_DAY=10
AUTO_ASSIGN_LEADS=True

# Juris-Lead Platform Settings
ENABLE_PRO_BONO_TIER=True
MAX_FREE_ANALYSES_PER_IP=5
REQUIRE_PHONE_VERIFICATION=False
ENABLE_PDF_REPORTS=True

# Azure Settings (for production)
AZURE_APP_SERVICE=False
AZURE_DOMAIN=

# India-specific settings
INDIA_SPECIFIC_SETTINGS=True
DEFAULT_TIMEZONE=Asia/Kolkata
DEFAULT_LANGUAGE_CODE=en-in
LOW_BANDWIDTH_MODE=False
