# Azure Environment Variables Template
# Copy this file to .env.azure and fill in the values for your Azure deployment

# Django Configuration
DEBUG=False
SECRET_KEY=your-production-secret-key-here-at-least-50-characters
AZURE_APP_SERVICE=True

# Database Configuration (Azure Database for PostgreSQL)
DATABASE_NAME=ipc_justice_aid
DATABASE_USER=ipc_admin
DATABASE_PASSWORD=your-secure-database-password
DATABASE_HOST=your-postgres-server.postgres.database.azure.com
DATABASE_PORT=5432
DATABASE_SSL_MODE=require

# Redis Configuration (Azure Cache for Redis)
REDIS_URL=rediss://:your-redis-key@your-redis-cache.redis.cache.windows.net:6380/0?ssl_cert_reqs=none
CELERY_BROKER_URL=rediss://:your-redis-key@your-redis-cache.redis.cache.windows.net:6380/0?ssl_cert_reqs=none
CELERY_RESULT_BACKEND=rediss://:your-redis-key@your-redis-cache.redis.cache.windows.net:6380/0?ssl_cert_reqs=none

# Security Configuration
ALLOWED_HOSTS=your-app-name.azurewebsites.net,.azurewebsites.net,your-custom-domain.com
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-app-name.azurewebsites.net
CSRF_TRUSTED_ORIGINS=https://your-frontend-domain.com,https://your-app-name.azurewebsites.net

# Azure Storage (Optional - for static/media files)
USE_AZURE_STORAGE=True
AZURE_ACCOUNT_NAME=your-storage-account-name
AZURE_ACCOUNT_KEY=your-storage-account-key
AZURE_CONTAINER=media
AZURE_STATIC_CONTAINER=static

# Google OAuth Configuration
GOOGLE_OAUTH2_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-oauth-client-secret

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Ollama Configuration (if using external Ollama service)
OLLAMA_BASE_URL=http://your-ollama-service:11434
OLLAMA_MODEL_NAME=Anupam/IPC-Helper:latest
OLLAMA_TIMEOUT=300
OLLAMA_MAX_RETRIES=2

# Application Insights (Optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# Additional Security
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# Django Superuser (Optional - for initial setup)
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=your-admin-password

# Azure Container Apps specific (if using Container Apps)
WEBSITES_PORT=8000
WEBSITES_CONTAINER_START_TIME_LIMIT=1800
