# Development environment variables
# Copy this to .env for local development

# Django Configuration
DEBUG=True
SECRET_KEY=django-insecure-development-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration (local development with Docker)
# These variables are used when DATABASE_URL is not set
DATABASE_NAME=ipc_justice_aid
DATABASE_USER=ipc_user
DATABASE_PASSWORD=ipc_password
DATABASE_HOST=db
DATABASE_PORT=5432

# NOTE: In production (Heroku), DATABASE_URL is automatically provided
# and these individual variables are ignored

# Redis Configuration (local development)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Analysis Service Configuration
# Use 'auto' for automatic selection, 'ollama' for Ollama, 'huggingface' for HuggingFace
ANALYSIS_ENVIRONMENT=ollama

# Ollama Configuration (for local development)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_NAME=Anupam/IPC-Helper:latest
OLLAMA_TIMEOUT=30
OLLAMA_MAX_RETRIES=3

# Hugging Face Configuration (optional for development)
# Get your free token from https://huggingface.co/settings/tokens
# HUGGINGFACE_API_TOKEN=your_huggingface_token_here
# HUGGINGFACE_MODEL_ID=microsoft/DialoGPT-medium
# HUGGINGFACE_TIMEOUT=30
# HUGGINGFACE_MAX_RETRIES=3

# Other services (Google, payments, etc.)
# Add your other environment variables here
