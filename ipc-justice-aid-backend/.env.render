# Render Production Environment Configuration
# This file contains environment variables for Render deployment

# Django Configuration
SECRET_KEY=your-secret-key-here-will-be-auto-generated-by-render
DEBUG=False
ALLOWED_HOSTS=*

# Analysis Service Configuration
# Force Gemini for production on Render
ANALYSIS_ENVIRONMENT=gemini

# Google Gemini Configuration (REQUIRED for production)
# Get your API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_TIMEOUT=60
GEMINI_MAX_RETRIES=3

# Database Configuration (Auto-configured by Render)
DATABASE_URL=postgresql://user:password@host:port/database

# Redis Configuration (Auto-configured by Render)
REDIS_URL=redis://host:port/0

# Celery Configuration (Auto-configured by Render)
CELERY_BROKER_URL=redis://host:port/0
CELERY_RESULT_BACKEND=redis://host:port/0

# Email Configuration (Optional - Configure if needed)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@ipc-justice-aid.com
ADMIN_EMAIL=admin@ipc-justice-aid.com

# Frontend URL (Update with your actual frontend URL)
FRONTEND_URL=https://juris-lead.vercel.app

# CORS Settings
CORS_ALLOWED_ORIGINS=https://juris-lead.vercel.app,http://localhost:3000,http://127.0.0.1:3000

# Google OAuth (Optional)
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

# Payment Gateways (Optional)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# Legal Analysis Settings
MAX_CASE_DESCRIPTION_LENGTH=5000
ANALYSIS_HISTORY_RETENTION_DAYS=365
ALLOW_ANONYMOUS_ANALYSIS=True
ENABLE_CASE_SHARING=True

# Lead Management Settings
DEFAULT_LEAD_EXPIRY_DAYS=30
MAX_LEADS_PER_LAWYER_PER_DAY=10
AUTO_ASSIGN_LEADS=True

# Juris-Lead Platform Settings
ENABLE_PRO_BONO_TIER=True
MAX_FREE_ANALYSES_PER_IP=5
REQUIRE_PHONE_VERIFICATION=False
ENABLE_PDF_REPORTS=True

# India-specific settings
INDIA_SPECIFIC_SETTINGS=True
DEFAULT_TIMEZONE=Asia/Kolkata
DEFAULT_LANGUAGE_CODE=en-in
LOW_BANDWIDTH_MODE=False

# Production settings
PORT=8000
WEBSITES_PORT=8000
